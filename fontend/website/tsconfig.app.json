{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    
    // --- MODULES & RESOLUTION ---
    // SỬ DỤNG 'bundler' VÀ 'ESNext' LÀ CHUẨN HIỆN ĐẠI CỦA VITE
    "module": "ESNext", 
    "moduleResolution": "bundler", 
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,

    // --- ALIASING (Đảm bảo được kế thừa hoặc định nghĩa lại) ---
    // Nếu các thiết lập này nằm trong tsconfig.json gốc và được kế thừa đúng, KHÔNG CẦN ở đây.
    // Nếu KHÔNG, hãy thêm:
    /*
    "baseUrl": ".",
    "paths": {
      "@/": ["./src/"] 
    },
    */
    
    // --- PHẦN KHÁC ---
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* Linting */
    "strict": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmitOnError": false
  },
  
  // SỬA LỖI CÚ PHÁP: Kết hợp các pattern include
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/types/*.ts" // Đảm bảo các file types được include qua pattern trên
  ]
}